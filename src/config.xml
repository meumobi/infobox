<?xml version='1.0' encoding='utf-8'?>
<widget id="@@id" version="@@version" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
	<name>@@name</name>
	<description>@@description</description>
	<author email="contact@meumobi.com" href="http://meumobi.com">meumobi Team</author>
	
	<preference name="android-build-tool" value="gradle" />
	<preference name="android-installLocation" value="auto" />
	<preference name="android-minSdkVersion" value="9" />
	<preference name="BackupWebStorage" value="none" />
	<preference name="detect-data-types" value="true" />
	<preference name="disable-cursor" value="false" />
	<preference name="DisallowOverscroll" value="true" />
	<preference name="exit-on-suspend" value="false" />
	<preference name="fullscreen" value="true" />
	<preference name="orientation" value="default" />
	<preference name="permissions" value="none" />
	<preference name="prerendered-icon" value="true" />
	<preference name="show-splash-screen-spinner" value="false" />
	<preference name="StatusBarBackgroundColor" value="#000000"/>
	<preference name="StatusBarOverlaysWebView" value="false"/>
	<preference name="StatusBarStyle" value="lightcontent" />
	<preference name="stay-in-webview" value="false" />
	<preference name="target-device" value="universal" />
	<preference name="webviewbounce" value="false" />
	<preference name='phonegap-version' value='cli-5.2.0' />

	<!-- Do not auto hide splash on iOS -->
	<preference name="AutoHideSplashScreen" value="false" />
	<!-- Do not auto hide splash on Android -->
	<preference name="SplashScreenDelay" value="12000"/>
	
	<!-- 
		<plugin name="pushwoosh-cordova-plugin" spec="~3.6.0" /> 
	-->
	<plugin name="com.pushwoosh.plugins.pushwoosh" source="pgb" version="~3.4.1" />
	<plugin name="com.telerik.plugins.nativepagetransitions" spec="~0.5.7" />
	<plugin name="cordova-open" spec="~1.0.9" />
	<plugin name="cordova-plugin-apprate" spec="~1.1.11"/>
	<plugin name="cordova-plugin-calendar" spec="~4.4.4" />
	<plugin name="cordova-plugin-console" spec="~1.0.1" />
	<plugin name="cordova-plugin-device" spec="~1.0.1" />
	<plugin name="cordova-plugin-device-orientation" spec="~1.0.1" />
	<plugin name="cordova-plugin-dialogs" spec="~1.1.1" />
	<plugin name="cordova-plugin-file" spec="~3.0.0" />	
	<plugin name="cordova-plugin-file-transfer" spec="~1.4.0" />
	<plugin name="cordova-plugin-globalization" spec="~1.0.1" />
	<plugin name="cordova-plugin-inappbrowser" spec="~1.0.1" />
	<plugin name="cordova-plugin-network-information" spec="~1.0.1" />
	<plugin name="cordova-plugin-spinnerdialog" spec="~1.3.2" />
	<plugin name="cordova-plugin-splashscreen" spec="~2.1.0" />
	<plugin name="cordova-plugin-statusbar" spec="~1.0.0" />
	<plugin name="cordova-plugin-whitelist" spec="~1.0.0" />
	<plugin name="cordova-plugin-x-socialsharing" spec="~5.0.2" />	
	<plugin name="cordova-plugin-x-toast" spec="~2.2.0" />
	<plugin name="cordova-plugin-media" spec="~1.0.1" />
	<plugin name="cordova-plugin-appversion" spec="~1.0.0" />
	<plugin name="hu.dpal.phonegap.plugins.uniquedeviceid" source="pgb" version="~1.2.0" />
	<plugin name="net.tunts.webintent" source="pgb" version="~0.2.1" />
	<plugin name="com.adobe.plugins.gaplugin" source="pgb" />

	<!-- 
		https://developer.apple.com/library/ios/documentation/userexperience/conceptual/MobileHIG/IconMatrix.html#//apple_ref/doc/uid/TP40006556-CH27-SW2 -->
		<!-- default mandatory icon 120x120px -->
		<icon src="icon.png" />

		<icon gap:platform="android" gap:qualifier="ldpi" src="res/icon/android/drawable-ldpi/ic_launcher.png" />
		<icon gap:platform="android" gap:qualifier="mdpi" src="res/icon/android/drawable-mdpi/ic_launcher.png" />
		<icon gap:platform="android" gap:qualifier="hdpi" src="res/icon/android/drawable-hdpi/ic_launcher.png" />
		<icon gap:platform="android" gap:qualifier="xhdpi" src="res/icon/android/drawable-xhdpi/ic_launcher.png" />
		<icon gap:platform="android" gap:qualifier="xxhdpi" src="res/icon/android/drawable-xxhdpi/ic_launcher.png" />
		<icon gap:platform="android" gap:qualifier="fr-xxhdpi" src="res/icon/android/drawable-xxxhdpi/ic_launcher.png" />
 
		<!-- ////////////////// iOS 7.0+ -->
		<!-- iPhone / iPod Touch  -->
		<!-- icon src="res/icon/ios/Icon-60.png" gap:platform="ios" width="60" height="60" /-->
		<icon src="res/icon/ios/AppIcon.appiconset/Icon-60@2x.png" gap:platform="ios" width="120" height="120" />

		<!-- iPad -->
		<icon src="res/icon/ios/AppIcon.appiconset/Icon-76.png" gap:platform="ios" width="76" height="76" />
		<icon src="res/icon/ios/AppIcon.appiconset/Icon-76@2x.png" gap:platform="ios" width="152" height="152" />

		<!-- Spotlight Icon -->
		<icon src="res/icon/ios/AppIcon.appiconset/Icon-40.png" gap:platform="ios" width="40" height="40" />
		<icon src="res/icon/ios/AppIcon.appiconset/Icon-40@2x.png" gap:platform="ios" width="80" height="80" />
	
		<!-- ////////////////// iOS 6.1 -->
		<!-- iPhone / iPod Touch -->
		<icon src="res/icon/ios/Icon.png" gap:platform="ios" width="57" height="57" />
		<icon src="res/icon/ios/Icon@2x.png" gap:platform="ios" width="114" height="114" />

		<!-- iPad -->
		<icon src="res/icon/ios/Icon-72.png" gap:platform="ios" width="72" height="72" />
		<icon src="res/icon/ios/Icon-72@2x.png" gap:platform="ios" width="144" height="144" />

		<!-- iPhone Spotlight and Settings Icon (iOS 6.1+) -->
		<icon src="res/icon/ios/AppIcon.appiconset/Icon-Small.png" gap:platform="ios" width="29" height="29" />
		<icon src="res/icon/ios/AppIcon.appiconset/Icon-Small@2x.png" gap:platform="ios" width="58" height="58" />

		<!-- iPad Spotlight and Settings Icon -->
		<icon src="res/icon/ios/Icon-Small-50.png" gap:platform="ios" width="50" height="50" />
		<icon src="res/icon/ios/Icon-Small-50@2x.png" gap:platform="ios" width="100" height="100" />

		<gap:splash src="splash.png" />
		<gap:splash gap:platform="android" gap:qualifier="ldpi" src="res/screen/android/drawable-ldpi/launch-image-android.9.png" />
		<gap:splash gap:platform="android" gap:qualifier="mdpi" src="res/screen/android/drawable-mdpi/launch-image-android.9.png" />
		<gap:splash gap:platform="android" gap:qualifier="hdpi" src="res/screen/android/drawable-hdpi/launch-image-android.9.png" />
		<gap:splash gap:platform="android" gap:qualifier="xhdpi" src="res/screen/android/drawable-xhdpi/launch-image-android.9.png" />
		<gap:splash gap:platform="android" gap:qualifier="xxhdpi" src="res/screen/android/drawable-xxhdpi/launch-image-android.9.png" />
		<!--gap:splash gap:platform="android" gap:qualifier="fr-xhdpi" src="res/screen/android/screen-fr-xhdpi.png" />
		<gap:splash gap:platform="android" gap:qualifier="port-xxhdpi" src="res/screen/android/screen-portrait-xxhdpi.png" />
		<gap:splash gap:platform="android" gap:qualifier="land-xxhdpi" src="res/screen/android/screen-landscape-xxhdpi.png" /-->

		<!-- iPhone and iPod touch -->
		<gap:splash gap:platform="ios" height="480" src="res/screen/ios/Default.png" width="320" />
		<gap:splash gap:platform="ios" height="960" src="res/screen/ios/Default@2x.png" width="640" />
  
		<!-- iPhone 5 / iPod Touch (5th Generation) -->
		<gap:splash gap:platform="ios" height="1136" src="res/screen/ios/Default-568h@2x.png" width="640" />
  
		<!-- iPhone 6 -->
		<gap:splash src="res/screen/ios/iPhone6-portrait@2x.png" gap:platform="ios" width="750" height="1334" />    
		<gap:splash src="res/screen/ios/iPhone6-Plus-portrait@3x.png" gap:platform="ios" width="1242" height="2208" /> 
		<gap:splash src="res/screen/ios/iPhone6-Plus-landscape@3x.png" gap:platform="ios" width="2208" height="1242" />

		<!-- iPad -->
		<gap:splash gap:platform="ios" height="1024" src="res/screen/ios/Default~ipad~nostatusbar.png" width="768" />
		<gap:splash gap:platform="ios" height="768" src="res/screen/ios/Default~ipad~landscape~nostatusbar.png" width="1024" />
  
		<!-- Retina iPad -->
		<gap:splash gap:platform="ios" height="2048" src="res/screen/ios/Default~ipad~nostatusbar@2x.png" width="1536" />
		<gap:splash gap:platform="ios" height="1536" src="res/screen/ios/Default~ipad~landscape~nostatusbar@2x.png" width="2048" />
		<!-- Retina iPad -->
		<gap:splash gap:platform="ios" height="2048" src="res/screen/ios/Default~ipad~nostatusbar@2x.png" width="1536" />
		<gap:splash gap:platform="ios" height="1536" src="res/screen/ios/Default~ipad~landscape~nostatusbar@2x.png" width="2048" />

		<!-- 
			Navigation Whitelist
			Controls which URLs the WebView itself can be navigated to -->
		<allow-navigation href="*" />

		<!--
			Network Request Whitelist
			Controls which network requests (images, XHRs, etc) are allowed to be made -->
		<access origin="*" />
		<!--
			Intent Whitelist
			Controls which URLs the app is allowed to ask the system to open -->
		<allow-intent href="file://*" />
		<allow-intent href="sms:*" />
		<allow-intent href="tel:*" />
		<allow-intent href="geo:*" />
		<allow-intent href="ibooks:*" />
		<allow-intent href="http://*/*" />
		<allow-intent href="https://*/*" />
		<allow-intent href="mailto:*" />
		<allow-intent href="geo:*" />
		<platform name="android">
			<allow-intent href="market:*" />
		</platform>
		<platform name="ios">
			<allow-intent href="itms:*" />
			<allow-intent href="itms-apps:*" />
		</platform>
		
		<content src="index.html"/>
</widget>
